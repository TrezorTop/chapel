datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}


model User {
    username String @id
    passwordHash String
    tokens RefreshToken[]
}


model RefreshToken {
    token String @id
    owner User @relation(fields: [ownerUsername], references: [username])
    ownerUsername String
}


model Car {
    id String @id @default(uuid())
    name String @unique
    configs Config[]
}


model Bundle {
    id String @id @default(uuid())
    name String @unique
    configs Config[]
}


model Config {
    data String
    car Car @relation(fields: [carId], references: [id], onDelete: Cascade)
    carId String
    bundle Bundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
    bundleId String

    @@id([carId, bundleId])
}